{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "living-arts",
  "main": "dist/_worker.js",
  "compatibility_date": "2025-12-02",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "assets": {
    "directory": "dist",
    "binding": "ASSETS"
  },
  "observability": {
    "enabled": true
  },

  "workflows": [
    {
      "name": "video-production",
      "binding": "VIDEO_WORKFLOW",
      "class_name": "VideoProductionWorkflow"
    }
  ],

  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "living-arts-db",
      "database_id": "c86cbd70-83a2-4950-bb6c-b2c406340dd5"
    }
  ],

  "r2_buckets": [
    {
      "binding": "STORAGE",
      "bucket_name": "living-arts"
    }
  ],

  "vars": {
    "TEXT_GEN_URL": "https://text-gen.solamp.workers.dev",
    "AUDIO_GEN_URL": "https://audio-gen.solamp.workers.dev",
    "STOCK_MEDIA_URL": "https://stock-media.solamp.workers.dev",
    "RENDER_SERVICE_URL": "https://render-service.solamp.workers.dev"
  }
}
